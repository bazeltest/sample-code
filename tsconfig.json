{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "allowJs": false,
      "jsx": "react",
      "importHelpers": true,
      "alwaysStrict": true,
      "strictNullChecks": true,
      "strictPropertyInitialization": true,
      "watch": false,
      "rootDir": "src",
      "outDir": "dist",
      "removeComments": true,
      "sourceMap": false,
      "declaration": true,
      "noEmitOnError": false,
      "forceConsistentCasingInFileNames": true,
      "allowUnreachableCode": false,
      "allowUnusedLabels": false,
      "noImplicitAny": true,
      "noUnusedParameters": false,
      "noUnusedLocals": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "pretty": true,
      "lib": ["es6", "dom", "esnext"],
      "types": ["reflect-metadata"],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }